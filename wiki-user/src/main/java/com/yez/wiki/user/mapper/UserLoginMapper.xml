<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="com.yez.wiki.user.dao.UserLoginDao">
	<resultMap type="com.yez.wiki.entity.security.UserDetailsImpl" id="UserResultMap">
		<id column="user_id" property="id" jdbcType="INTEGER"/>
		<result column="username" property="username" jdbcType="VARCHAR"/>
		<result column="password" property="password" jdbcType="VARCHAR"/>
		<result column="locked" property="locked" jdbcType="CHAR"/>
		<result column="log_date" property="logDate" jdbcType="CHAR"/>
	</resultMap>
	
	<resultMap type="com.yez.wiki.entity.security.GrantedAuthorityImpl" id="AuthorityResultMap">
		<result column="authority_mark" property="authority" jdbcType="VARCHAR"/>
	</resultMap>
	
	<select id="selectByUsername" parameterType="String" resultMap="UserResultMap">
		SELECT * FROM t_user WHERE username = #{username, jdbcType=VARCHAR}
	</select>
	
	<select id="getUserAuthorities" parameterType="int" resultMap="AuthorityResultMap">
		SELECT authority_mark FROM t_authority 
		WHERE authority_id IN (SELECT authority_id FROM t_role_authorities
		WHERE role_id IN (SELECT role_id FROM t_user_roles
		WHERE user_id = #{id, jdbcType=INTEGER}))
	</select>
	
	<update id="updateLogTime">
		UPDATE t_user SET log_time = #{logTime, jdbcType=CHAR} WHERE user_id = #{id, jdbcType=INTEGER} 
	</update>
</mapper>